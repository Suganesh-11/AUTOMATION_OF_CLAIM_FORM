Loki.php
<?php

$name = $_POST['name'];
$designation = $_POST['designation'];
$institution = $_POST['institution'];
$college = $_POST['college'];
$contact = $_POST['contact'];
$email = $_POST['email'];
$date = $_POST['date'];
$session = $_POST['session'];
$sem = $_POST["sem"];
$date_formatted = date('Y-m-d', strtotime($date));


$servername = "localhost";
$username = "root";
$password = "";
$dbname = "claim";

// Create connection
$conn = mysqli_connect($servername, $username, $password, $dbname);

// Check connection
if (!$conn) {
die("Connection failed: " . mysqli_connect_error());
} else {
    $stmt = $conn->prepare("INSERT INTO claim(name, designation, institution, college, contact, email, date, session, sem) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?)");
    $stmt->bind_param("ssssissss", $name, $designation, $institution, $college, $contact, $email, $date_formatted, $session, $sem);


    $execval = $stmt->execute();
    echo $execval;

    $stmt->close();

    $sql = "SELECT * FROM claim WHERE name = ?";
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("s", $name);
    $stmt->execute();
    $result = $stmt->get_result();
    if ($result->num_rows> 0) {
        // Output the data
        while ($row = $result->fetch_assoc()) {
if($college == 'K.Ramakrishna College of Engineering') {
                $amount = 250;
            } else {
                $amount = 500;
            }
            if ($session == "morning" || $session == "afternoon") {
                $price = $amount+500;
              } else if ($session == "both") {
                $price = ($amount*2)+500;
              }
            echo '<!DOCTYPE html>
<html>
<head>
<title>----Confidential----</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" type="text/css"href="1818.css">
</head>
<body style="width: 793.7007874px; height: 1122.519685px;">
<center>

<div class="header">
<img src="https://pbs.twimg.com/profile_images/1367784253228867589/7JZXLYiJ_400x400.jpg" alt="Logo" class="logo">
<div class="heading">
<center><div class="heading">
<h1>Office of the Controller Of Examination</h1>
</div></center>
<center><div class="heading2">
K.Ramakrishna College Of Engineering (Autonomous)
</div></center>
<center>
<div class ="heading3">
                   NH-45,Samayapuram,Tiruchirappalli-621112.
</div>
</center>
<center>
<div class ="heading4"><b><u>Claim for Squad(Theory and practical)</u></b></div>
</center>
</div>
</div></center>
<center><h3>B.E. /B.Tech. /M.E. /MBA End Semester Examination -  ' .htmlspecialchars($row["sem"]).'</h3></center>
<hr>
<br>

<label for="name">  NAME:   ' . htmlspecialchars($row["name"]) .'</label>
<br>
<br>

<label for="designation">  DESIGNATION:   '  . htmlspecialchars($row["designation"]) .'</label>
<br>
<br>
<label for="institution">  INSTITUTION:   ' . htmlspecialchars($row["institution"]) .'</label>
<br>
<br>
<br>
<br>
<label for="contact">  CONTACT:   ' . htmlspecialchars($row["contact"]) .'</label>
<br>
<br>
<label for="email">  EMAIL:   ' . htmlspecialchars($row["email"]) .'</label>
<br>
<br>
<table border=1>
<thead>
<tr>
<th>S.No.</th>
<th>Date</th>
<th>Renumeration(per session)</th>
<th>Total</th>
</tr>

<tbody>;

<tr>
<td>1</td>
<td>' . $row["date"] .'</td>
<td>' . $amount .'</td>
<td>' . $price .'</td>
</tr>
</tbody></table>
<center>

<div class="header">
<center><div class="heading">
<h1>Renumeration Details For Squad</h1>
</div></center>
<center><div class="heading2">
            (Rs.500/- Per session for External)
</div></center>
<center>
<div class ="heading3">(Rs.250/- Per session for Internal)
</div>
</center>
<center>
<div class ="heading4"><b><u>TA & DA - Rs.500/- (Only for External)</u></b></div>
</center>
</div>
</div></center>
<br><br><br><br><br><br><br><br><br>

<div class="sign">Signature of the Squad Member with Name</div>

</body>
</html>';
        }

    } else {
        echo "0 results";
    }
mysqli_close($conn);
}
?>
